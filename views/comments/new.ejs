<%- include("../partials/header") %>

<div class="container" style="text-align: center;">

	<h1>Add a new Comment to <%= hotel.name%> </h1>
	<div class="row">
	
		<div style="width:30%;margin:0 auto;"> 
		
		

		<form action="/hotels/<%= hotel._id %>/comments" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="comment[text]" placeholder="text" required>
		</div>
	
		
		<div class="form-group">
			<input class="btn  btn-outline-secondary btn-block" type="submit">
		</div>
		</form>
		<a href="/hotels">Go Back</a>
	</div>

	</div>

</div>
<%- include("../partials/footer") %>