<h1 class="text-center ">This is the Email verification form</h1>

        
<div class="ui main text container segment">
    <div class="ui huge header">HotelStore</div>

    <form class="ui form" action="/contact" method="POST">
    <div class="field">
        <label>Name
            <input name="name" type="text" class="form-control" required />
        </label>
    </div>
    <div class="field">
        <label>Email
            <input name="email" type="email" class="form-control" required />
        </label>
    </div>
   <div class="field">
    <label>Message
        <textarea name="message" cols="30" rows="10" class="form-control" required ></textarea>
    </label>
   </div>
    <div class="field">
        <button class="ui violet big basic button" type="submit">Submit</button>
    </div>
    </form>


